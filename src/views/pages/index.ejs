    <% if (data && data.hero && data.hero.skills) { %>
        <% data.hero.skills.forEach(skill => { %>
            <div>
                <p><%= skill.name %></p>
                <i class="<%= skill.icon %>"></i>
                <p><%= skill.percent %></p>
            </div>
        <% }); %>
    <% } %>
    -->
    <script type="module" src="/js/script.js"></script>
</body>
</html>